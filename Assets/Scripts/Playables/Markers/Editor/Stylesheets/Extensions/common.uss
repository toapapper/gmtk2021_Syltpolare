Annotation
{
	width: 18px;
	height: 18px;
}

/* A marker will use the default style when it is collapsed.*/
.AnnotationStyle
{
    background-image: resource("Assets/Scripts/Playables/Markers/Editor/Stylesheets/Resources/annotation_collapsed.png");
}

/* A marker will use the hover:focus:checked pseudo-state when it is selected.*/
.AnnotationStyle:hover:checked
{
    background-image: resource("Assets/Scripts/Playables/Markers/Editor/Stylesheets/Resources/annotation.png");
}

/* A marker will use this style when it is not selected and not collapsed.*/
.AnnotationStyle:checked
{
    background-image: resource("Assets/Scripts/Playables/Markers/Editor/Stylesheets/Resources/annotation.png");